  <div class="celebrate hidden" id="celebrate">
    <div class="hearts" id="hearts"></div>
    <div class="box">
      <h1>YAY!! ğŸ‰ğŸ’˜ Angel said YES!!</h1>
      <p>You just made my day extra special.</p>
      <p>Thank you for being my Valentine, Angel ğŸ’–</p>
      <img class="gif" src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExbWlsa21vY2hhYmVhcg/giphy.gif" alt="Milk and Mocha Celebration" />
      <p>Angel, sending you lots of love, smiles, and the sweetest moments ever ğŸ»ğŸ«ğŸ¥›ğŸ’</p>
      <button id="resetBtn" style="margin-top:14px;background:#ff4d88;color:white;padding:12px 22px;border:none;border-radius:999px;font-size:1rem;box-shadow:0 10px 20px rgba(255,77,136,0.35);">Replay ğŸ’</button>
    </div>
  </div>

  <script>
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const plea = document.getElementById('plea');
    const celebrate = document.getElementById('celebrate');
    const hearts = document.getElementById('hearts');
    const resetBtn = document.getElementById('resetBtn');

    let yesScale = 1;
    let noClicks = 0;

    const pleas = [
      'Angel please? ğŸ¥ºğŸ’—',
      'Pretty please, Angel? ğŸ™âœ¨',
      'Angel, I really really want you to be my Valentine :(( ğŸ’”',
      'I promise hugs, smiles, and lots of love Angel ğŸ’•',
      'Just say yes, Angel ğŸ˜­ğŸ’–'
    ];

    // Make "No" button dodge
    noBtn.addEventListener('mouseover', () => {
      const x = Math.random() * 60 - 30; 
      const y = Math.random() * 60 - 30; 
      noBtn.style.transform = `translate(${x}px, ${y}px)`;
    });

    noBtn.addEventListener('click', () => {
      noClicks++;
      yesScale += 0.2;
      yesBtn.style.transform = `scale(${yesScale})`;
      yesBtn.style.zIndex = 2;

      plea.textContent = pleas[Math.min(noClicks - 1, pleas.length - 1)];

      if (yesScale > 2.2) {
        noBtn.style.pointerEvents = 'none';
        noBtn.style.opacity = 0.5;
      }
    });

    yesBtn.addEventListener('click', () => {
      celebrate.classList.remove('hidden');
      spawnHearts();
    });

    resetBtn.addEventListener('click', () => {
      celebrate.classList.add('hidden');
      yesBtn.style.transform = 'scale(1)';
      yesScale = 1;
      noClicks = 0;
      noBtn.style.pointerEvents = 'auto';
      noBtn.style.opacity = 1;
      noBtn.style.transform = 'translate(0,0)';
      plea.textContent = '';
      hearts.innerHTML = '';
    });

    function spawnHearts() {
      for (let i = 0; i < 30; i++) {
        const heart = document.createElement('div');
        heart.className = 'heart';
        heart.textContent = 'ğŸ’–';
        heart.style.left = Math.random() * 100 + 'vw';
        heart.style.animationDuration = (2 + Math.random() * 3) + 's';
        hearts.appendChild(heart);
        setTimeout(() => hearts.removeChild(heart), 3500);
      }
    }
  </script>
